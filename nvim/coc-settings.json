{
	"languageserver": {
		"golang": {
			"command": "gopls",
			"rootPatterns": ["go.mod", ".git/"],
			"filetypes": ["go"]
		},
		"ccls": {
			"command": "ccls",
			"filetypes": ["c", "cpp"],
			"rootPatterns": [".ccls", "compile_commands.json", ".git/"],
			"initializationOptions": {
				"cache": {
					"directory": "/tmp/ccls"
				}
			}
		}
	},
	"suggest.removeDuplicateItems": true
}

